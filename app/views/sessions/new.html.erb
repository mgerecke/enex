<div class="col-md-7 col-lg-7">
<div class="login">
<%= provide(:title, 'Sign up') %>
<h3>Anmelden</h3>
<%= form_for(:session, url: sessions_path, class: 'login')  do |f| %>
		<div class="row">
			<div class="form-group">
				<!-- label for="email" class="col-sm-2 control-label">Email</label -->
				<div class="col-sm-9">
					<%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
				</div>
			</div>	
		</div><!-- /row -->
		<div class="row">
			<div class="form-group">
				<!--label for="password" class="col-sm-2 control-label">Passwort</label -->
				<div class="col-sm-9">
					<%= f.password_field :password, class: 'form-control', placeholder: 'Passwort' %>
				</div>
			</div>
		</div><!-- /row -->
	<br />
	<div class="row">
		<div class="form-group">
			<div class="col-sm-5">
				<%= f.submit "login", class: "btn btn-large btn-primary" %>
			</div>
		</div>
	</div><!-- /row -->	
<% end %>
</div>
</div>

				</li>
				<li>
					<%= link_to 'Energieausweis erstellen', '/eausweis' %>
				</li>
			<% end %>
			<% if session[:request] == '' %>
				<li>
					<a  href="#">Energieportal</a>
				</li>
				<p>&nbsp;</p>
			<% end %>
		<% end %>
		<% if !signed_in? && session[:request] != 'login' %>		

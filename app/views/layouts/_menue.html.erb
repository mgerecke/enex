	<ul>
		<% if !signed_in? %>
			<% if session[:request] == '' %>
				<li>
					<%= link_to "Energieausweis erstellen", '/eausweis' %>
				</li>
				<li>
					<%= link_to "Energieberatung durchfuehren", '/eberatung' %>
				</li>
			<% end %>		
			<% if session[:request] == 'eausweis' %>
				<li>
					<img src="/assets/icon-eausweis-blau100x100.png" width="100" heigth="100" title="Energieausweis erstellen">
				</li>
				<li>
					<%= link_to 'Energieberatung durchfuehren', '/eberatung' %>
				</li>
			<% end %>
			<% if session[:request] == 'eberatung' %>
